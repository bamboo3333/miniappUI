/* pages/consult/consult.wxss */
.container{
    padding: 0 10rpx;
    position: relative;
    background-color:antiquewhite;
}
.top{
  top: 10px;
  display: flex;
  flex-direction: row;
}
.list{
  position: relative;
  right: 80rpx;
}
.list-msg{
  background-color: white;
  text-align: center;
  height: 50rpx;
  width: 135rpx;
  border: 1px solid #ccc;
  padding: 0 10px;

}
.select_box {
    position: absolute;
    background-color: #eee;
    padding: 0 10rpx;
    width: 140rpx;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;

}
@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: 200rpx;
    }
}
 
.select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;
}
.search-main{
  position: relative;
  right: 50rpx;
}
.search{
  background-color: white;
  border-radius: 5px;
  border: 1px solid #ccc;
  display: flex;  
  flex-direction: row;
  height: 50rpx; 
}
.search input{
  width: 300rpx;
}
.sousuo{
  position: relative;
  left: 50px;
  background-color: rgb(45, 175, 214);
  width: 80rpx;
}

/* 内容显示排版 */
.message{
  display: flex;
  flex-direction: row;
  padding-top: 20px;
}
.image{
  margin-right: 200px;
  border: 1px solid red;
}
.up{
  display: flex;
  flex-direction: row;
  border: 1px solid red;
  margin-left: -200px;
}
.type{
  margin-left: 200px;
  font-size: 12px;
  color: rgb(94, 202, 230);
}
.down{
  margin-left: -200px;
}
.introduct{
  font-size: 10px;
}