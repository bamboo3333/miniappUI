<!-- 招聘资讯的首页 -->
<view wx:if="{{isHide}}">
    <view wx:if="{{canIUse}}" >
        <view class='header'>
            <image src='/images/ic_edit.png'></image>
        </view>
 
        <view class='content'>
            <view>申请获取以下权限</view>
            <text>获得你的公开信息(昵称，头像等)</text>
        </view>
 
        <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
            授权登录
        </button>
    </view>
    <view wx:else>请升级微信版本</view>
</view>
 
<view wx:else>

<view>
	<view class="container">
		<!-- 头部展示 -->
		<view class="header">
			<image class="header-background" src="{{bcImage}}" />
		</view>
		<view class="search">
			<view class="search-icon">
				<image src="{{searchImage}}" />
			</view>
			<!-- 设置搜索 -->
			<view class="search-input">
				<input class="search-input"></input>
			</view>
		</view>
		<!-- 设置招聘类别设置 -->
		<view class="hireType">
			<!-- 招聘类别展示 -->
			<block wx:for="{{items}}" wx:key="id">
				<navigator class="hire" url="{{item.url}}">
					<view class="hire-icon">
						<image src="{{item.icon}}" />
					</view>
					<text>{{item.text}}</text>
				</navigator>
			</block>
		</view>
		<!-- 设置推荐招聘标题 -->
		<view class="hire-Title">
			<view class="Chinese-title">- 热门推荐 -</view>
			<!-- <view class="English-title">Hot recommendations</view> -->
		</view>
		<!-- 设置推荐招聘 -->
		<!-- 根据招聘资薪进行一个推荐 -->
		<view class="hire-recommend-list">
			<view class="hire-recommend">
				<view wx:for="{{ hotNews }}">
					<view class="hire-recommend-left">
						<navigator url="../hireCard/hireCard?index={{ index }}&type=4" class="recommend-one">
							<image src="{{ item.coverImg }}"></image>
						</navigator>
					</view>
				</view>

			</view>
		</view>
		<!-- 设置所有招聘标题 -->
		<view class="hire-Title">
			<view class="Chinese-title">- 今日校招 -</view>
			<!-- <view class="English-title">Today's enrollment</view> -->
		</view>
		<!-- 今日校招 -->
		<view wx:for="{{ todayNews }}">
			<view class="hire-today">
				<navigator url="../hireCard/hireCard?index={{ index }}&type=3" hover-class="navigator-hover" class="con-item">
					<image src="{{ item.coverImg }}" class="actionpic"></image>
					<view class="clear"></view>
				</navigator>
			</view>
		</view>
		<!-- 底部展示 -->
		<foot></foot>
	</view>

</view>
</view>