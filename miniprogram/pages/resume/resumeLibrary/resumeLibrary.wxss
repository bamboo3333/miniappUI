/* 简历推荐 */
.container {
  margin: 0rpx;
  display: flex;
  flex-direction: column;
  height: auto;
}

.resume-title {
  border: 1px solid #cccccc;
  margin: 0 auto;
  background-color: #ffffff;
  padding: 3px;
  border-radius: 5px;
  width: 100%;
  height: auto;
  border: 2rpx solid #ccc;
}

.resume-recommend-title {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: auto;
}

.resume-recommend-title image {
  width: 45rpx;
  height: 45rpx;
}

.resume-recommend {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0rpx;
  width: 100%;
}


.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-top: 5rpx;
  width: 100%;
  height: auto;
}

.item image {
  width: 82%;
  height: 591rpx;
  border-radius: 40rpx;
  border: 2rpx solid #ccc;
}

.item text {
  font-size: 35rpx;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  color: #020202;
}

/* 设置底部样式 */
#foot {
  font-size: 23rpx;
}