page {
  background-color: #F0F0F0;
  height: auto;
  font-family: "Microsoft YaHei";
}

.content {
  margin: 0rpx;
  width: 100%;
  height: auto;
}

.slider {
  width: 100%;
  height: 450rpx;
}


.slide-image {
  width: 100%;
  height: 450rpx;
}

.line {
  height: 25rpx;
  background: #eee;
}

.title {
  font-size: 40rpx;
}

.hr {
  height: 1px;
  background-color: #cccccc;
  opacity: 0.2;
  margin-top: 10px;
  margin-bottom: 10px;
}

.resume-nav {
  background: #fff;
  width: 100%;
  height: 200rpx;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.swipder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

}

.swiper-item {
  overflow: hidden;
  will-change: transform;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.nav-list {
  float: left;
  width: 63%;
  margin: auto;
  text-align: center;
  margin-bottom: 1.5em;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 0.5rpx solid #ccc;
  border-radius: 10rpx;
}

.nav-list image {
  width: 100px;
  height: 75px;
}

/* 简历推荐 */
.resume-title {
  border: 1px solid #cccccc;
  margin: 0 auto;
  background-color: #ffffff;
  padding: 3px;
  border-radius: 5px;
  width: 100%;
  height: auto;
}

.resume-recommend-title {
  margin: 18rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: auto;
}

.resume-recommend-title image {
  width: 45rpx;
  height: 45rpx;
}

.resume-recommend {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 1rpx;
  padding: 0rpx;
}

.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: auto;
}

.item image {
  width: 82%;
  height: 591rpx;
  border-radius: 40rpx;
  border: 2rpx solid #ccc;
}

.item-text {
  font-size: 35rpx;
  font-family: "Microsoft YaHei";
  color: #1296db;
}

/* 设置底部样式 */
#foot {
  font-size: 23rpx;
}